{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "test-local.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}